                    "R2aExhibit": {
                        "ProjectMissionDescription": {
                            "val": "The primary objective of DRAS 2 is to establish and maintain a modernized retired military pay accounts.  DRAS 2 will replace the current Defense Retiree and Annuitant Systems (DRAS) and selected manual processes with proven state of the market technology.  This modernization will allow for the consolidation of disparate DRAS systems and business processes, the reduction of system redundancies and inefficiencies, and increased customer satisfaction."
                        },
                        "AccomplishmentPlannedProgramList": {
                            "AccomplishmentPlannedProgram": [
                                {
                                    "Title": {
                                        "val": "Defense Retired and Annuitant Pay System (DRAS) 2"
                                    },
                                    "Accomplishment": {
                                        "PriorYear": {
                                            "Funding": {
                                                "val": "4.768"
                                            },
                                            "Text": {
                                                "val": "-DRAS2 will issue a Task Order to continue system development, testing, and Information Assurance activities.  Development activities include Build 2 requirements review and Conference Room Pilots, Build 2 System \/ Regression, System Integration, Function\n-Obtain additional COTS software licensing.\n-Continue development of system interfaces and performance testing.\n-Establish DRAS2 hosting environment."
                                            }
                                        }
                                    },
                                    "PlannedProgram": {
                                        "CurrentYear": {
                                            "Funding": {
                                                "val": "13.475"
                                            },
                                            "Text": {
                                                "val": "Issue a Task Order for:\n- Final Build development \n- Perform System Integration, Interoperability, User Acceptance Testing, and Parallel Operations Testing \n- User Training\n- Establish production hosting environment and perform Cyber Defense Security activities."
                                            }
                                        },
                                        "BudgetYearOne": {
                                            "Funding": {
                                                "val": "10.731"
                                            }
                                        },
                                        "BudgetYearOneBase": {
                                            "Funding": {
                                                "val": "10.731"
                                            },
                                            "Text": {
                                                "val": "The system will transition to DFAS during FY2020."
                                            }
                                        },
                                        "AppChangeSummary": {
                                            "val": "Decrease in FY2019 as a result of reduced program requirements."
                                        }
                                    }
                                }
                            ]
                        },
                        "AcquisitionStrategy": {
